{
  "version": 1,
  "vault": {
    "root": "vault",
    "folders": ["code-notes", "rules", "integrations", "sessions", "structure"]
  },
  "index": {
    "dbPath": "vault/.projecthub/index.db",
    "dirtyFilePath": "vault/.projecthub/dirty-files.txt",
    "auditLogPath": "vault/.projecthub/audit.log"
  },
  "embedding": {
    "provider": "openai",
    "model": "text-embedding",
    "dimension": 768,
    "maxBatchSize": 100
  },
  "search": {
    "defaultTopK": 10,
    "candidateMultiplier": 5,
    "weights": {
      "lexical": 0.7,
      "vector": 0.3
    },
    "fts5FieldWeights": {
      "title": 8.0,
      "headingPath": 4.0,
      "body": 1.0,
      "tags": 2.0,
      "properties": 3.0
    }
  },
  "chunking": {
    "maxTokensPerChunk": 512,
    "overlapLines": 2
  },
  "llm": {
    "provider": "openai-compatible",
    "model": "llm",
    "rerankerModel": "reranker",
    "rerankerStrategy": "endpoint",
    "cacheTTLMs": 3600000
  },
  "session": {
    "autoSaveAfterTurns": 10,
    "compactTokenThreshold": 20000
  },
  "namespacePatterns": ["services/*", "packages/*", "apps/*", "libs/*", "modules/*"]
}
